{
  "$schema": "https://opencode.ai/config.json",
  "theme": "base16-rose-pine",
  "model": "anthropic/claude-opus-4-5-20251101",
  "small_model": "anthropic/claude-sonnet-4-20250514",
  "autoupdate": true,

  "permission": {
    "external_directory": "allow",
  },

  "provider": {
    "anthropic": {
      "models": {
        "claude-opus-4-5-20251101": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 32000,
            },
          },
        },
        "claude-sonnet-4-20250514": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000,
            },
          },
        },
        "claude-haiku-4-20250514": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 4000,
            },
          },
        },
      },
    },
  },

  "agent": {
    "build": {
      "maxSteps": 50,
    },
    "plan": {
      "maxSteps": 30,
    },
    "explore": {
      "model": "anthropic/claude-sonnet-4-20250514",
      "maxSteps": 40,
    },
  },

  "mcp": {
    "linear-server": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.linear.app/mcp"],
      "enabled": true,
    },
  },

  "tools": {
    // Denied
    "bash(git push:*)": false,

    // Core tools - all enabled
    "bash": true,
    "edit": true,
    "write": true,
    "read": true,
    "grep": true,
    "glob": true,
    "list": true,
    "todowrite": true,
    "todoread": true,
    "webfetch": true,

    // MCP servers
    "mcp__linear-server__*": true,
    "mcp__rust-analyzer__*": true,
  },
}
