{
  "$schema": "https://opencode.ai/config.json",
  "theme": "base16-rosepine",
  "model": "anthropic/claude-sonnet-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "autoupdate": true,

  "permission": {
    "external_directory": "allow"
  },

  "provider": {
    "anthropic": {
      "models": {
        "claude-sonnet-4-5": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 32000
            }
          }
        },
        "claude-haiku-4-5": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 8000
            }
          }
        }
      }
    }
  },

  "tools": {
    // Denied
    "bash(git push:*)": false,

    // Core tools - all enabled
    "bash": true,
    "edit": true,
    "write": true,
    "read": true,
    "grep": true,
    "glob": true,
    "list": true,
    "todowrite": true,
    "todoread": true,
    "webfetch": true,

    // MCP servers
    "mcp__linear-server__*": true,
    "mcp__rust-analyzer__*": true
  }
}
